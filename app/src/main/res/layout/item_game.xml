<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius = "5dp"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/icon_item_game"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="28dp" />

        <TextView
            android:id="@+id/tv_lable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellownoradius"

            android:gravity="center"
            android:text="lable1"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lable1"
            android:layout_marginTop="5dp"

            android:background="@drawable/yellownoradius"
            android:gravity="center_vertical"
            android:text="lable2"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gamename_item_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/icon_item_game"
            android:text="111111"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gamemessage_item_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gamename_item_game"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/icon_item_game"
            android:text="111111"
            android:textColor="@color/colorGravy" />

    </RelativeLayout>

</android.support.v7.widget.CardView>